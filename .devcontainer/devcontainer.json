{
  "image": "mcr.microsoft.com/vscode/devcontainers/javascript-node:22",
  "hostRequirements": {
    "cpus": 4
  },
  "waitFor": "onCreateCommand",
  "postCreateCommand": "cd frontend && npm ci",
  "updateContentCommand": "sudo apt update && sudo apt install xdg-utils chromium -y",
  "postAttachCommand": {
    "server": "cd frontend && npm run storybook"
  },
  "portsAttributes": {
    "6006": {
      "label": "Application",
      "onAutoForward": "openPreview"
    }
  },
  "forwardPorts": [6006]
}
